{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "paths": {
        "@app/*": ["app/*"],
        "@features/*": ["features/*"],
        "@pages/*": ["pages/*"],
        "@shared/*": ["shared/*"],
        "@styles/*": ["styles/*"],
        "@tests/*": ["tests/*"],
        "@e2e/*": ["e2e/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }